<% if action == :new %>
<% action_url = bands_url %>
<% else %>
<% action_url = band_url %>
<% end %>

<form action="<%= action_url %>" method="post">
  <% if action == :edit %>
  <input type="hidden" name="_method" value="patch">
  <% end %>
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label>Bandname:
  <input type="text" name="band[name]" value="<%= band.name %>"></label>
  <input type="submit" value="Submit">
</form>
